mixin socials(className, classStyle)
    //Социалки className-вводим класс родительского блока
    //classStyle вводим имя модификатора для стилизации
    //стили в _socials.scss
    ul(class=`socials ` + `${className}` + `__socials`)
        -
            var socialMenu = [
            ['vk', 'https://vk.com/id3022300'],
            ['github', 'https://github.com/amper86'],
            ['in', 'https://ru.linkedin.com']
            ]
        each soc in socialMenu
            li.socials__item
                a(href=`${soc[1]}` class=`socials__link ` + `socials__link_` + `${classStyle}` target='_blank')
                    svg(class='socials__icon')
                        use(xlink:href=require('../../images/icons/sprite.svg') + `#${soc[0]}`)

mixin navigation(infoNav, className)
    //infoNav принимает массив 0-путь ссылки 1-текст ссылки
    //className принимает названия можификатора у li
    ul.nav-list
        each nav in infoNav
            li(class='nav-list__item ' + 'nav-list__item_' + `${className}`)
                a.nav-list__link(href=`${nav[0]}`) #{nav[1]}